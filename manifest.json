{
  "manifest_version": 3,
  "name": "TechTube Filter",
  "version": "1.1",
  "description": "Filters YouTube to show only technology content and hides Shorts",
  "icons": {
    "128": "icon.png"
  },
  "content_scripts": [{
    "matches": ["*://*.youtube.com/*"],
    "js": ["keywords.js", "content.js"],
    "run_at": "document_end"
  }],
  "host_permissions": ["*://*.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage"]
}